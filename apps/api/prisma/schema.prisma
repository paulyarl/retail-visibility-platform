  session     ScanSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([tenantId, sessionId, barcode], name: "uq_scan_result_tenant_session_barcode")
  @@index([tenantId, status, createdAt])
  @@index([sessionId])
  @@index([barcode])
  @@map("scan_results")
}

