model ScanTemplate {
  id                String        @id @default(cuid())
  tenantId          String        @map("tenant_id")
  name              String
  defaultCategory   String?
  defaultPriceCents Int?
  defaultCurrency   String        @default("USD") @db.Char(3)
  defaultVisibility String        @default("private")
  enrichmentRules   Json?
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")
  tenant            Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  sessions          ScanSession[]

  @@unique([tenantId, name])
  @@index([tenantId])
  @@map("scan_templates")
}

model ScanSession {
  id             String        @id @default(cuid())
  tenantId       String        @map("tenant_id")
  userId         String?       @map("user_id")
  templateId     String?       @map("template_id")
  status         String        @default("active")
  deviceType     String?       @map("device_type")
  scannedCount   Int           @default(0) @map("scanned_count")
  committedCount Int           @default(0) @map("committed_count")
  duplicateCount Int           @default(0) @map("duplicate_count")
  metadata       Json?
  startedAt      DateTime      @default(now()) @map("started_at")
  completedAt    DateTime?     @map("completed_at")
  tenant         Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user           User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  template       ScanTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  results        ScanResult[]

  @@index([tenantId, status])
  @@index([startedAt])
  @@map("scan_sessions")
}

model ScanResult {
  id          String      @id @default(cuid())
  tenantId    String      @map("tenant_id")
  sessionId   String      @map("session_id")
  barcode     String
  sku         String?
  rawPayload  Json?       @map("raw_payload")
  status      String      @default("new")
