{
  "name": "@rvp/api",
  "version": "1.0.0",
  "description": "RVP API server (Express + TS + Prisma + SQLite)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p .",
    "start": "prisma migrate deploy && node dist/index.js",
    "db:seed": "prisma db seed",
    "db:push": "prisma db push",
    "db:push:dev": "doppler run --config dev -- prisma db push",
    "db:push:prod": "doppler run --config prod -- prisma db push",
    "migrate:data": "node --experimental-json-modules ./scripts/migrate.js",
    "migrate:storage": "node --experimental-json-modules ./scripts/storage-sync.js",
    "postinstall": "prisma generate",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.917.0",
    "@prisma/client": "^6.17.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "execa": "^9.6.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "1.4.5-lts.2",
    "nanoid": "^3.3.7",
    "tslib": "^2.6.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@supabase/supabase-js": "^2.75.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.22",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^10.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.17.1",
    "supabase": "^2.53.6",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8",
    "zx": "^8.8.5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
